<p id="notice"><%= notice %></p>

<h1>Moderadors</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Senha</th>
      <th>Sal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @moderadors.each do |moderador| %>
      <tr>
        <td><%= moderador.nome %></td>
        <td><%= moderador.email %></td>
        <td><%= moderador.senha %></td>
        <td><%= moderador.sal %></td>
        <td><%= link_to 'Show', moderador %></td>
        <td><%= link_to 'Edit', edit_moderador_path(moderador) %></td>
        <td><%= link_to 'Destroy', moderador, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

